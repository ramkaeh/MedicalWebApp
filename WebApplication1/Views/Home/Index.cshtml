@{
    ViewBag.Title = "Strona Główna - Przychodnia Lekarska";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>


    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/images/medical.jpg" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>Welcome to Our Clinic</h5>
                <p>Your health is our priority</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/clinic2.jpg" alt="Second slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>Experienced Doctors</h5>
                <p>Providing high-quality healthcare</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/clinic3.jpg" alt="Third slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>Modern Facilities</h5>
                <p>State-of-the-art medical equipment</p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="container">
    <div class="row mt-5">
        <div class="col-lg-4">
            <h2>About Us</h2>
            <p>We are a leading medical clinic providing top-notch healthcare services.</p>
            <p><a class="btn btn-primary" href="#">Learn More &raquo;</a></p>
        </div>
        <div class="col-lg-4">
            <h2>Our Services</h2>
            <p>We offer a wide range of medical services to cater to your health needs.</p>
            <p><a class="btn btn-primary" href="#">View Services &raquo;</a></p>
        </div>
        <div class="col-lg-4">
            <h2>Contact Us</h2>
            <p>Get in touch with us to book an appointment or for any inquiries.</p>
            <p><a class="btn btn-primary" href="#">Contact Us &raquo;</a></p>
        </div>
    </div>
</div>
<div class="container">




    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <!-- Godziny otwarcia -->
                <section id="hours" class="my-5">
                    <h2>Godziny Otwarcia</h2>
                    <ul>
                        <li>Poniedziałek - Piątek: 8:00 - 18:00</li>
                        <li>Sobota: 9:00 - 14:00</li>
                        <li>Niedziela: Zamknięte</li>
                    </ul>
                </section>
            </div>
            <div class="col-md-6">
                <img src="~/images/medical1.webp" alt="Doctor" class="img-fluid rounded">
            </div>
        </div>
    </div>
    <!-- Formularz kontaktowy -->
    <section id="contact" class="my-5">
        <h2>Kontakt</h2>
        @using (Html.BeginForm("Contact", "Home", FormMethod.Post))
        {
            <div class="form-group">
                @Html.Label("Imię i Nazwisko")
                @Html.TextBox("Name", null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.Label("Adres Email")
                @Html.TextBox("Email", null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.Label("Wiadomość")
                @Html.TextArea("Message", new { @class = "form-control", rows = 5 })
            </div>
            <button type="submit" class="btn btn-primary">Wyślij</button>
        }
    </section>
</div>
