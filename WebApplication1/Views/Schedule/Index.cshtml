@{
    ViewData["Title"] = "Index";
}

<h2>Schedule an appointment</h2>
<div class="mt-4">
    <div class="form-group">
        <label for="clinicSelect">Choose clinic:</label>
        <select class="form-control" id="clinicSelect">
            <option value="">Select clinic...</option>
            <option value="clinic1">Clinic 1</option>
            <option value="clinic2">Clinic 2</option>
            <option value="clinic3">Clinic 3</option>
        </select>
    </div>

    <div class="form-group mt-4">
        <label for="doctorSelect">Choose doctor:</label>
        <select class="form-control" id="doctorSelect">
            <option value="">Select doctor...</option>
            <option value="doctor1">Dr. Smith</option>
            <option value="doctor2">Dr. Johnson</option>
            <option value="doctor3">Dr. Williams</option>
        </select>
    </div>
</div>
<div class="container">
    <!-- Informacje o przychodni -->
    <section id="about" class="my-5">
        </section>

    <!-- Interaktywny kalendarz -->
    <section id="calendar" class="my-5">
        <h2>Kalendarz Rezerwacji</h2>
        <div id="calendar"></div>
    </section>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.10.2/fullcalendar.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.10.2/fullcalendar.min.css" rel="stylesheet" />

    <script>
        $(document).ready(function () {
            $('#calendar').fullCalendar({
                header: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'month,agendaWeek,agendaDay'
                },
                editable: false,
                events: [
                    {
                        title: 'Wizyta u Dr. Kowalskiego',
                        start: '2024-06-10T10:00:00',
                        end: '2024-06-10T11:00:00'
                    },
                    {
                        title: 'Wizyta u Dr. Nowak',
                        start: '2024-06-11T12:00:00',
                        end: '2024-06-11T13:00:00'
                    }
                ],
                selectable: true,
                selectHelper: true,
                select: function (start, end) {
                    var title = prompt('Wprowadź tytuł wizyty:');
                    var eventData;
                    if (title) {
                        eventData = {
                            title: title,
                            start: start,
                            end: end
                        };
                        $('#calendar').fullCalendar('renderEvent', eventData, true);
                    }
                    $('#calendar').fullCalendar('unselect');
                }
            });
        });
    </script>
}