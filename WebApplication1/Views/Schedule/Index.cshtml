@{
    ViewData["Title"] = "Index";
}

<h2>Schedule an appointment</h2>
<body>
<div class="mt-4">
    <div class="form-group">
        <label for="clinicSelect">Choose clinic:</label>
        <select class="form-control" id="clinicSelect">
            <option value="">Select clinic...</option>
            @foreach (var clinic in ViewBag.Clinics)
            {
                <option value="@clinic.Value">@clinic.Text</option>
            }

        </select>
    </div>

    <div class="form-group mt-4">
        <label for="doctorSelect">Choose doctor:</label>
        <select class="form-control" id="doctorSelect">
            <option value="">Select doctor...</option>
            @foreach(var doctor in ViewBag.Doctors)
            {
                <option value="@doctor.Value">@doctor.Text</option>
            }
        </select>
    </div>
</div>
<div class="container">
    <!-- Informacje o przychodni -->
    <section id="about" class="my-5">
        </section>

    <!-- Interaktywny kalendarz -->
    <section id="calendar" class="my-5">
        <h2>Kalendarz Rezerwacji</h2>
        <div id="calendar"></div>
    </section>
    
    <button type="button" class="btn btn-primary" onclick="submitForm()">Submit</button>
</div>

    @section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.10.2/fullcalendar.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.10.2/fullcalendar.min.css" rel="stylesheet" />

    <script>
        var selectedEvent = null;

        $(document).ready(function () {
            $('#calendar').fullCalendar({
                header: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'month,agendaWeek,agendaDay'
                },
                editable: false,
                selectable: true,
                selectHelper: true,
                select: function (start, end) {
                    var title = prompt('Wprowadź tytuł wizyty:');
                    if (title) {
                        selectedEvent = {
                            title: title,
                            start: start,
                            end: end
                        };
                        $('#calendar').fullCalendar('renderEvent', selectedEvent, true);
                    }
                    $('#calendar').fullCalendar('unselect');
                }
            });
        });

        function submitForm() {
            if (!selectedEvent) {
                alert("Please select a date and time for the appointment.");
                return;
            }

            var appointmentData = {
                Clinic: $('#clinicSelect').val(),
                Doctor: $('#doctorSelect').val(),
                AppointmentDate: selectedEvent.start.format(),                                
                Title: selectedEvent.title
            };

            $.ajax({
                type: "POST",
                url: '@Url.Action("ScheduleAppointmentAsync", "Schedule")',
                data: JSON.stringify(appointmentData),
                contentType: "application/json; charset=utf-8",
                success: function (response) {
                    alert("Appointment scheduled successfully!");
                },
                error: function (xhr, status, error) {
                    console.log(xhr);
                    console.log(status);
                    console.log(error);
                    alert("Error: " + error);
                }
            });
            
        }
    </script>


    }
</body>